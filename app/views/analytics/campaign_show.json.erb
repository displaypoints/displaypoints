<% @val = @data.map{|d| d.last} %>
{
  "y_axis": {
    "steps": <%= PageAnalytic.horiz_grid(4, @val.max) %>,
    "max": <%= @val.max %>,
    "colour":"#999999",
    "grid-colour":"#e7eef3"
  },
  "title": {
    "text": "<%= "Activity from #{@data.first.first.strftime('%b %d')} to #{@data.last.first.strftime('%b %d')}" %>",
    "style":"{font-size: 14px; color: #666666; text-align: center;}"
  },
  "elements": [
    {
      "halo-size":1,
      "fill-alpha":0.35,
      "type":"area_hollow",
      "colour":"#72a7cf",
      "values": <%= @val.to_json %>,
      "dot-size":4
    }
  ],
  "tooltip": {
    "shadow":true,
    "body":"{font-size: 10px; font-weight: bold; color: #666666;}",
    "title":"{font-size: 14px; color: #666666;}",
    "background":"#ffffff",
    "colour":"#72a7cf"
  },
  "x_axis": {
    "colour":"#999999",
    "grid-colour":"#e7eef3",
    "labels": {
      "steps":1,
      "labels": <%= @data.map{|d| d.first.strftime('%b %d')}.to_json %>
      }
  },
  "bg_colour":"#FFFFFF"
}